{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Miku Expos held around the world(2014-2024)",
    "width": 400,
    "height": 200,
    "projection": {"type": "equalEarth"},
    "layer": [
        {
        "data": {
            "url": "https://raw.githubusercontent.com/fvan0008/3179/refs/heads/main/ne_110m_admin_0_countries.json",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "transform": [
            {
            "calculate": "'There have been no concerts in ' + datum.properties.NAME",
            "as": "note"
            }
        ],
        "mark": {
            "type": "geoshape",
            "fill": "#ddd",
            "stroke": "white",
            "strokeWidth": 1
        },
        "encoding": {"tooltip": {"field": "note"}}
        },

        {
            "data": {
                "url": "https://raw.githubusercontent.com/fvan0008/3179/refs/heads/main/Full_Expo_List.csv"
            },
            "transform": [
                {
                    "aggregate": [{"op": "count", "field": "Expo_Amount", "as": "Total_Expo"}],
                    "groupby": ["Expo_Country"]
                },
                {
                    "lookup": "Expo_Country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/fvan0008/3179/refs/heads/main/ne_110m_admin_0_countries.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "geo"
                }
            ],
            "mark": {"type": "geoshape"},
            "encoding": {
                "shape": {"field": "geo", "type": "geojson"},
                "color": {
                    "field": "Total_Expo",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [1, 3, 10],
                        "range": ["#edf8fb", "#b2e2e2", "#66c2a4", "#238b45"]
                    }
                },
                "tooltip": [
                {"field": "Expo_Country", "type": "nominal", "title": "Country"},
                {"field": "Total_Expo", "type": "quantitative", "title": "Total Expos" }
                ]
            }
        }
    ]
}