{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Miku Expos held in America (2014-2024)",
  "width": 900,
  "height": 400,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/fvan0008/3179/refs/heads/main/ne_50m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#eee",
        "stroke": "#999"
      },
      "projection": {
        "type": "albersUsa"
      }
    },
    {
      "data": {
                "url": "https://raw.githubusercontent.com/fvan0008/3179/refs/heads/main/Full_Expo_List.csv"
      },
      "transform": [
        {
          "filter": "datum.Expo_Country === 'United States of America'"
        },
        {
          "filter": "datum.Expo_City != 'Newark'"
        },
        {
          "aggregate": [{"op": "count", "as": "expo_count"}],
          "groupby": ["Expo_Country", "Expo_City"]
        },
        {
          "lookup": "Expo_City",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/fvan0008/3179/refs/heads/main/ne_50m.json",
              "format": {
                  "type": "topojson",
                  "feature": "ne_50m_populated_places"
              }
            },
            "key": "properties.NAME",
            "fields": ["properties.LONGITUDE","properties.LATITUDE"]
            
          }
        },
        {
          "calculate": "datum['properties.LONGITUDE']",
          "as": "LONGITUDE"
        },
        {
          "calculate": "datum['properties.LATITUDE']",
          "as": "LATITUDE"
        }
      ],
      "mark": {
        "type": "circle",
        "color": "#0595a8",
        "opacity": 0.9
      },
      "encoding": {
        "longitude": {"field": "LONGITUDE","type": "quantitative"},
        "latitude": {"field": "LATITUDE","type": "quantitative"},
        "size": {"field": "expo_count","type":"quantitative"},
        "tooltip": [
          {"field":"Expo_City","title":"City"},
          {"field":"expo_count","title":"Number of Expos"}
        ]
      },
      "projection": {
        "type": "albersUsa"
      }
    }
  ]
}